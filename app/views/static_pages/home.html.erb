<div id="index-banner" class="parallax-container">
  <div class="section no-pad-bot">
    <div class="container">
      <br><br>
      <h2 class="header center red-text">Learn To Play Any Instrument</h2>
      <div class="row center">
        <h5 class="header col s12 light">Music Speaks what can not be expressed in words</h5>
      </div>
      <div class="row center">
        <%= form_for :search, url: search_index_path do |f| %>
          <div class="input-field col s4">
            <%= f.select(:region, @city.regions.collect{|region| [region.name, region.id]},{ prompt: 'Select a Location' }) %>
          </div>
          <div class="input-field col s4">
            <%= select_tag(:instrument_id , options_for_select(Instrument.all.collect{|ins| [ins.name, ins.id]},{ prompt: 'Select an Instrument' }))%>
          </div>
           <div class="input-field col s4">
              <%= f.button raw('Search <i class="material-icons right">search</i>'), class: 'btn btn-large btn-raised red' %>
           </div>
        <% end %>
      </div>
      <br><br>
    </div>
  </div>
  <div class="parallax"><%= image_tag("guitar-02.jpg") %></div>
</div>


