<div class="devise-container">
  <div class="card contain-sm style-transparent">
    <h5 class="red-text header">LOGIN</h5>
    <div class="card-body">
      <div class="row">
        <div class="col s6">

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="row">
              <div class="input-field col s12">
                <div class="input-field">
                  <%= f.label :email %>
                  <%= f.email_field :email, class: 'validate' %>
                </div>
              </div>
            </div>
            
            <div class="row">
              <div class="input-field col s12">
                <div class="input-field">
                  <%= f.label :password %>
                  <%= f.password_field :password, autocomplete: "off" %>
                </div>
              </div>
            </div>

            <div class="row">
              <div class="input-field col s6 text-left">
                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>
              </div>
              <div class="input-field col s6 text-right">
                <div class="actions">
                  <button class="btn waves-effect waves-light red" type="submit" name="action">    Login
                      <i class="material-icons right">send</i>
                  </button>                  
                  <%#= f.submit "Login", class: "btn btn-primary btn-raised" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col s6 center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>