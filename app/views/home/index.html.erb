<div id="index-banner" class="parallax-container">
  <div class="section no-pad-bot">
    <div class="container">
      <br><br>
      <h2 class="header center red-text">Learn To Play Any Instrument</h2>
      <div class="row center">
        <h5 class="header col s12 light">Music Speaks what can not be expressed in words</h5>
      </div>
      <div class="row center">
        <%= form_for :search do |f| %>
          <div class="input-field col s4">
            <%= f.select(:location ,[['Indore',1], ['Pune',2], ['Mumbai',3],['Delhi',4]],{ prompt: 'Select a Location' },  { :class => 'white-text' } )%>
          </div> 
          <div class="input-field col s4">
            <%= f.select(:location ,[['Guitar',1], ['Piano',2], ['Drums',3],['FLute',4]],{ prompt: 'Select an Instrument' },  { :class => 'white-text' } )%>
          </div>
           <div class="input-field col s4">
              <button class="btn btn-large waves-effect waves-light red" type="submit" name="action">    Search
                  <i class="material-icons right">search</i>
              </button>
              <%#= f.submit "Sign up", class: "btn btn-primary btn-raised" %>
            </div> 
        <% end %>
      </div>
      <br><br>

    </div>
  </div>
  <div class="parallax"><%= image_tag("guitar-02.jpg") %></div>
</div>


